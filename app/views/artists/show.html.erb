
<h1><%=@artist.name%></h1>

<h3>All songs</h3>

<ol id="song_list">
  <% @artist.songs.each do |song|%>
    <li class="song", id="<%= song.id %>"> <%= song.name %>
      <%= link_to "Delete song", artist_song_path(@artist, song), id: song.id, class: "btn btn-primary delSong" %>
    </li>
  <% end %>
</ol>
<a id="delAllSongs", class="btn btn-primary", href="#">Delete all songs</a>

<hr>
<%= render "form"%>

<hr>

<input type="hidden" id="artist_id" value="<%= @artist.id %>">
