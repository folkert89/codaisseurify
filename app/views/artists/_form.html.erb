<%= form_for [@artist, @artist.songs.new] do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <label>Add this song?</label>

  <div class="actions">
    <%= f.submit "Add song", class: "btn btn-primary", data: {disable_with: false}%>
  </div>
<% end %>
